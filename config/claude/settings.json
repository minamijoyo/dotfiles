{
  "includeCoAuthoredBy": false,
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": [
    "terraform",
    "aws-documentation"
  ],
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(git add:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go tool cover:*)",
      "Bash(goimports:*)",
      "mcp__terraform__resolveProviderDocID",
      "mcp__terraform__getProviderDocs",
      "mcp__aws-documentation__search_documentation",
      "mcp__aws-documentation__read_documentation"
    ],
    "deny": [
      "Read(.env)",
      "Read(.envrc)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(.env)",
      "Write(.envrc)",
      "Write(.terraformrc)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(terraform:*)",
      "Bash(tofu:*)",
      "Bash(tfmigrate apply:*)",
      "mcp__terraform__searchModules",
      "mcp__terraform__moduleDetails"
    ]
  }
}
