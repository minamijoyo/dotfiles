{
  "includeCoAuthoredBy": false,
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
  },
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(git add:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go tool cover:*)",
      "Bash(goimports:*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.envrc)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(.env)",
      "Write(.envrc)",
      "Write(.terraformrc)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(terraform apply:*)",
      "Bash(terraform destroy:*)",
      "Bash(terraform state:*)",
      "Bash(tofu apply:*)",
      "Bash(tofu destroy:*)",
      "Bash(tofu state:*)",
      "Bash(tfmigrate apply:*)"
    ]
  }
}
