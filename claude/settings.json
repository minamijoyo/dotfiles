{
  "includeCoAuthoredBy": false,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "CLAUDE_CODE_AUTO_CONNECT_IDE": false,
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": true,
    "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": true,
    "DISABLE_MICROCOMPACT": true
  },
  "statusLine": {
    "type": "command",
    "command": "ccusage statusline",
    "padding": 0
  },
  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": [
    "terraform",
    "aws-documentation"
  ],
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(ls:*)",
      "Bash(diff:*)",
      "Bash(git ls-files:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go tool cover:*)",
      "Bash(goimports:*)",
      "mcp__terraform__resolveProviderDocID",
      "mcp__terraform__getProviderDocs",
      "mcp__aws-documentation__search_documentation",
      "mcp__aws-documentation__read_documentation"
    ],
    "deny": [
      "Read(.env)",
      "Read(.envrc)",
      "Read(direnvrc)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(.env)",
      "Write(.envrc)",
      "Write(direnvrc)",
      "Write(.terraformrc)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(terraform apply:*)",
      "Bash(terraform destroy:*)",
      "Bash(terraform state:*)",
      "Bash(terraform taint:*)",
      "Bash(terraform import:*)",
      "Bash(tfmigrate apply:*)",
      "mcp__terraform__searchModules",
      "mcp__terraform__moduleDetails"
    ]
  }
}
